






<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="">Connectez vous</h1>
    <label for="inputMail" class="">Mail</label>
    <input type="text" value="{{ last_username }}" name="mail" id="inputMail" class="" placeholder="Mail" required autofocus>
    <label for="inputPassword" class="">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="" placeholder="Mot de passe..." required>
<br>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    <button class="btn btn-lg btn-success" type="submit">
        Connexion
    </button>
</form>

